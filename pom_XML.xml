    <build>
        <plugins>
            <!--maven-surefire-plugin-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>3.5.2</version> <!-- Use a recent version -->
                <configuration>
                    <includes>
                        <include>**/*MyRunnerTest.java
                        </include> <!-- Adjust according to your test runner naming pattern -->
                    </includes>
                    <testFailureIgnore>true</testFailureIgnore>
                    <useFile>false</useFile>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId> <!-- If you're using JUnit -->
                        <version>3.5.2</version>
                    </dependency>
                </dependencies>
            </plugin>

            <!--maven-cucumber-reporting plugin-->
            <plugin>
                <groupId>net.masterthought</groupId>
                <artifactId>maven-cucumber-reporting</artifactId>
                <version>5.8.5</version>
                <executions>
                    <execution>
                        <id>execution</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <projectName>Your Project Name</projectName>
                            <outputDirectory>${project.build.directory}/cucumber-reports</outputDirectory>
                            <inputDirectory>${project.build.directory}/cucumber-reports</inputDirectory>
                            <jsonFiles>
                                <param>**/*.json</param>
                            </jsonFiles>
                            <classificationFiles>
                                <param>**/classifications.properties</param>
                            </classificationFiles>
                            <!-- Add custom CSS -->
                            <customCss>
                                img, video {
                                max-width: 400px !important;
                                max-height: 300px !important;
                                }
                            </customCss>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
